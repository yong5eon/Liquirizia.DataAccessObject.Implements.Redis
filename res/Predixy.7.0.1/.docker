FROM ubuntu:22.04
ENV VERSION 7.0.1
RUN apt -y update
RUN apt -y upgrade
RUN apt install -y wget
RUN wget --no-check-certificate https://github.com/joyieldInc/predixy/archive/${VERSION}.tar.gz -O predixy-${VERSION}.tar.gz
RUN tar xvfz predixy-${VERSION}.tar.gz
RUN apt install -y build-essential
WORKDIR predixy-${VERSION}
RUN make
RUN cp src/predixy /usr/bin
RUN mkdir /etc/predixy
CMD ["/usr/bin/predixy", "/etc/predixy/predixy.conf"]